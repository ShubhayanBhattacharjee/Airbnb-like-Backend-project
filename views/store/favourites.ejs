<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/favourites.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  <main>
    <h2>Here are Your Favourite Homes </h2>
    <ul class="home-list">
      <% registeredHomes.forEach(home => { %>
        <li>
          <div class="home-details">
            <h3 class="home-name"><%= home.houseName %></h3>
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>">
            <p class="home-location"><%= home.location %></p>
            <p class="home-price">Price: <%= home.price %> per night</p>
            <p class="home-bedrooms">Bedrooms: <%= home.no_of_bedRooms %></p>
            <form action="/favourites/delete/<%= home._id %>" method="POST">
              <button type="submit" class="booking" style="background-color: red;">Remove from Favourites</button>
            </form>
          </div>
        </li>
      <% }); %>
    </ul>
  </main>
</body>
</html>
