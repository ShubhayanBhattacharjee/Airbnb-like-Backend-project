  <body>
    <%- include('../partials/navbar') %>
    <header>
      <h1>Register Your Home</h1>
    </header>
    <main class="add-home-container">
      <h1>Add Your Home</h1>

      <form action="/host/addHome" method="POST">
        <div class="form-group">
          <label for="houseName">House Name:</label>
          <input type="text" id="houseName" name="houseName" required>
        </div>
  
        <div class="form-group">
          <label for="location">Location:</label>
          <input type="text" id="location" name="location" required>
        </div>
  
        <div class="form-group">
          <label for="price">Price per Night (â‚¹):</label>
          <input type="number" id="price" name="price" min="1" required>
        </div>
  
        <div class="form-group">
          <label for="bedrooms">Number of Bedrooms:</label>
          <input type="number" id="no_of_bedRooms" name="no_of_bedRooms" min="1" required>
        </div>
  
        <button type="submit">Add Home</button>
      </form>
    </main>
  </body>
  </html>
